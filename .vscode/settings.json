{
    "editor.snippetSuggestions": "top",

    "editor.fontSize": 12,
    "editor.rulers": [
        79,
        100,
        120
    ],
    "files.exclude": {
        "**/*.pyc": true,
        "**/__pycache__": true
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.eol": "\n",

    "emmet.includeLanguages": {
        "django-html": "html",
    },

    "python.defaultInterpreterPath": "./env/bin/python",
    "python.autoComplete.extraPaths": [".**"],

    "pylint.args": [
        "--load-plugins=pylint_django,pylint_quotes",
        "--ignore=C0301,W0142,W0402,R0201,E1101,E1102,C0103,R0901,R0903,R0904,C1001,W0223,W0232,W0201,E1103,C0111,W0511",
        "--disable=C0112,C0114,C0115,W0122,E1101,R0801",
        "--string-quote=double",
        "--django-settings-module=core.settings.common",
        "--max-line-length=120"
    ],
    "flake8.args": [
        "--load-plugins=flake8_quotes",
        "--ignore=C0301,W0142,W0402,R0201,E1101,E1102,C0103,R0901,R0903,R0904,C1001,W0223,W0232,W0201,E1103,C0111,E402,W503",
        "--inline-quotes=double",
        "--max-line-length=120"
    ],
    "mypy-type-checker.args": [
        "--ignore-missing-imports",
        "--follow-imports=silent",
        "--show-column-numbers",
        "--allow-untyped-defs",
        "--allow-subclassing-any",
        "--allow-untyped-calls",
        "--strict"
    ],

    "[django-html]": {
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 2
    }
}
